{
  "name": "Lucen",
  "workspaceFolder": "/workspaces/lucen-app-inc/lucenapp",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  // We're already in /lucenapp, so just install here.
  "postCreateCommand": "npm ci",

  // Remove postAttachCommand entirely (or keep a single string that doesn't cd).
  // "postAttachCommand": "echo Ready",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "settings": {
        // Let the terminal open at workspaceFolder (.)
        // Using "lucenapp" here would create /lucenapp/lucenapp again.
        "terminal.integrated.cwd": "."
      }
    }
  }
}

